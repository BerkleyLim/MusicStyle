<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace 이름은 SQL을 찾을 때 사용하는 그룹명이다.
     따라서 SQL 문을 사용하는 DAO 클래스 이름과 같게 하면
     유지보수할 때 알아보기 쉽다.
     단순히 알아보기 쉬울 뿐만 아니라 
     스프링 프레임워크와 연동할 때 DAO 객체를 자동 생성할 수 있다. 
-->
<mapper namespace="com.musicstyle.www.author.hyunsik.lim.pms.InformationDao">

   <!-- result column="DB 필드명" property="DTO 프로퍼티명" -->
  <resultMap type="Information" id="InformationMap">
    <id column="no" property="ino"/>
    <result column="username" property="username"/>
    <result column="view" property="view"/>
    <result column="artist" property="artist"/>
    <result column="title" property="title"/>
    <result column="img" property="img"/>
    <result column="genre" property="genre"/>
    <result column="release_date" property="releaseDate"/>
    <result column="album_name" property="albumName"/>
    <result column="music_link" property="musicLink"/>
    <result column="content" property="content"/>
    <result column="upload_date" property="uploadDate"/>
  </resultMap>
  
  <!-- SQL 문 id를 설정할 때 SQL문을 사용하는 메서드 이름과 같게하면
       유지보수할 때 알아보기 쉽다. 
       알아보기 쉬울 뿐만 아니라
       스프링 프레임워크와 연동할 때 DAO객체를 자동생성하고 
       그 메서드를 자동생성할 때 사용할 수 있다.
  -->
  
  
  <!-- 
  <insert id="insert" parameterType="Information">
    INSERT INTO `INTR_BOARD`
    (`no`, `username`, `view`, `artist`, `title`, 
     `img`, `genre`, `release_date`, `album_name`, 
     `music_link`, `content`, `upload_date`) 
    VALUES (#{memno},now(),#{content},#{path});
  </insert>
  -->
  
  <select id="selectList"
          resultMap="InformationMap"
          parameterType="map">
    select * from INFORMATION
     <!-- limit #{startRowNo}, #{pageSize} -->          
  </select>
  
  <!--
  <select id="selectOne" parameterType="int" resultMap="InformationMap">
    SELECT b.BNO, mem.NKNM,mem.MPPHO, b.PATH, b.BOCTT, COUNT(DISTINCT l.lno) AS cnt, b.BRTDT 
    FROM INTR_BOARD b 
    LEFT OUTER JOIN INTR_MEMBER mem 
    ON b.MEMNO = mem.MEMNO 
    LEFT OUTER JOIN INTR_LKMB l 
    ON b.BNO = l.BNO 
    LEFT OUTER JOIN INTR_BTMACH hm 
    ON b.BNO = hm.BNO 
    WHERE b.BNO = #{value}
  </select>
  -->
  
  <!-- 
  
   <select id="selectList" 
          resultMap="InformationMap"
          parameterType="map">
    SELECT b.BNO, b.PATH, COUNT(l.bno) AS cnt 
    FROM INTR_BOARD b 
    LEFT OUTER JOIN INTR_LKMB l 
    ON b.BNO = l.BNO 
    GROUP BY BNO 
    order by bno desc
    limit #{startRowNo}, #{pageSize}
  </select>
  
   -->
  
 <!-- <select id="selectOne" parameterType="int" resultMap="InformationMap">
    SELECT b.BNO, mem.NKNM,mem.MPPHO, b.PATH, b.BOCTT, COUNT(DISTINCT l.lno) AS cnt, b.BRTDT 
    FROM INTR_BOARD b 
    LEFT OUTER JOIN INTR_MEMBER mem 
    ON b.MEMNO = mem.MEMNO 
    LEFT OUTER JOIN INTR_LKMB l 
    ON b.BNO = l.BNO 
    LEFT OUTER JOIN INTR_BTMACH hm 
    ON b.BNO = hm.BNO 
    WHERE b.BNO = #{value}
  </select>
  
  -->
  
  <select id="commentList" parameterType="int" resultMap="InformationMap">
    SELECT m.NKNM, b.CRTDT 
    FROM INTR_BCMMT b 
    LEFT OUTER JOIN INTR_MEMBER m 
    ON b.MEMNO = m.MEMNO 
    WHERE b.BNO = #{value}
    ORDER BY b.CNO DESC
  </select>
  
  <select id="hashtagList" parameterType="int" resultMap="InformationMap">
    SELECT bo.BNO, ht.TNAME
    FROM INTR_BOARD bo 
    INNER JOIN INTR_BTMACH mt 
    ON bo.BNO = mt.BNO 
    LEFT OUTER JOIN INTR_HASHTAG ht 
    ON mt.HTNO = ht.HTNO
    WHERE bo.BNO = #{value}
  </select>
  
  <select id="isLike" parameterType="int" resultType="Map">
    SELECT m.MEMNO, l.BNO 
    FROM INTR_MEMBER m 
    INNER JOIN INTR_LKMB l 
    ON m.MEMNO = l.MEMNO 
    WHERE m.MEMNO = #{value}
  </select>
  
  <select id="isLikeOne" parameterType="map" resultType="Map">
    SELECT * FROM `INTR_LKMB` WHERE BNO = #{no} AND MEMNO = #{memNo}
  </select>
  
  <insert id="addLike" parameterType="map">
    INSERT INTO `INTR_LKMB` (`LNO`, `BNO`, `MEMNO`) VALUES (NULL, #{no}, #{memNo});
  </insert>
  
  <delete id="deleteLike" parameterType="map">
    DELETE FROM `INTR_LKMB` WHERE BNO = #{no} AND MEMNO = #{memNo}
  </delete>
  
  <insert id="addcomment" parameterType="map">
    INSERT INTO `INTR_BCMMT` (`CNO`, `BNO`, `CMCTT`, `CRTDT`, `MEMNO`) 
    VALUES (NULL, #{no}, now(), #{cmmt}, #{memNo})
  </insert>
  
  <select id="isWriter" parameterType="map" resultMap="InformationMap">
    SELECT BNO FROM `INTR_BOARD` WHERE BNO = #{no} AND MEMNO = #{memNo}
  </select>
  
  <select id="selectLink" parameterType="int" resultType="Map">
    SELECT * FROM `INTR_BRLK` WHERE BNO = #{no}
  </select>
  
  <delete id="deleteLink" parameterType="int">
    DELETE FROM `INTR_BRLK` WHERE `INTR_BRLK`.`LNO` = #{no}
  </delete>
  
  <insert id="addLink" parameterType="Board">
    INSERT INTO `INTR_BRLK` (`LNO`, `BNO`, `POX`, `POY`, `PRNM`, `ADDR`)
    VALUES (NULL, #{no}, #{poX}, #{poY}, #{product}, #{address})
  </insert>
  
  <select id="selectLinkOne" resultMap="InformationMap">
    SELECT * FROM `INTR_BRLK` ORDER BY LNO DESC LIMIT 1
  </select>
  
   <insert id="insert" parameterType="Board">
    INSERT INTO `INTR_BOARD`
    (`MEMNO`, `BRTDT`, `BOCTT`, `PATH`) 
    VALUES (#{memno},now(),#{content},#{path});
  </insert>
  
  <select id="selectRecent" resultMap="InformationMap">
    select bno from INTR_BOARD order by bno desc limit 1 
  </select>
  
  <select id="selectMyBoard" resultMap="InformationMap">
    SELECT b.BNO, COUNT(DISTINCT l.LNO) cnt, COUNT(DISTINCT c.CNO) cmtCnt, b.PATH
    FROM INTR_BOARD b 
        LEFT OUTER JOIN INTR_LKMB l 
        ON b.BNO = l.BNO 
        LEFT OUTER JOIN INTR_BCMMT c 
        ON b.BNO = c.BNO 
    WHERE b.memno = #{bno}
    GROUP BY b.BNO
    ORDER BY b.BNO DESC
  </select>
  
  <select id="totalBoardCount" parameterType="int" resultType="int">
    SELECT COUNT(*) FROM INTR_BOARD WHERE MEMNO = #{no}
  </select>
  
</mapper>







